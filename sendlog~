#!/bin/bash
sudo touch snaplog.txt
sudo chmod 777 snaplog.txt
sudo tail -100 bridge3.log > snaplog.txt
sudo touch message.txt
sudo chmod 777 message.txt
sudo echo "Hello, here's the last 100 lines of the bridge uwsgi log" > message.txt
mutt -s "Bridge Log" -a snaplog.txt -- bmulliga@haverford.edu < message.txt
#mutt -s "Bridge Log" -a snaplog.txt -- bmulliga@haverford.edu < message.txt
sudo chmod 770 snaplog.txt
